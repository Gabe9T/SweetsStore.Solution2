@model SweetStore.Models.Treat

<div class="content">
    <h4>Create New Treat</h4>

    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-red", @style = "font-weight: 600;" })

    @using (Html.BeginForm())
    {
        @Html.LabelFor(model => model.Name)
        <br />
        @Html.TextBoxFor(model => model.Name, new { placeholder = "Name" })
        <br />
        @Html.LabelFor(model => model.Description)
        <br />
        @Html.TextBoxFor(model => model.Description, new { placeholder = "Description" })
        <br />
        <br />
        <input type="submit" value="Add Treat" class="btn btn-green" />
    }
    
    @Html.ActionLink("Show All Treats", "Index", "Treats", null, new { @class = "btn btn-blue" })
</div>