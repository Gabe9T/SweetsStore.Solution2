@model SweetStore.Models.Treat

<div class="content">
    <h2>Add a Flavor</h2>

    <h4>Add a Flavor to: @Model.Name</h4>

    @using (Html.BeginForm())
    {
        @Html.HiddenFor(model => model.TreatId)

        @Html.Label("Select a Flavor")
        @Html.DropDownList("FlavorId", new SelectList(ViewBag.Flavors, "FlavorId", "Name"))

        <input class="button" type="submit" value="Add" />
    }

    <p>@Html.ActionLink("Back to Treats", "Index")</p>

    @Html.ActionLink("Home", "Index", "Home", null, new { @class = "btn btn-blue" })
</div>