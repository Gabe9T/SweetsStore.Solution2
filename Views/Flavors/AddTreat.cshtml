@model SweetStore.Models.Treat

<div class="content">
    <h2>Add a Treat</h2>

    <h4>Add a Treat to: @Model.Name</h4>

    @using (Html.BeginForm())
    {
        @Html.HiddenFor(model => model.TreatId)

        <div class="form-group">
            @Html.Label("Select a Treat")
            @Html.DropDownList("TreatId", new SelectList(ViewBag.Treats, "TreatId", "Name"))
        </div>

        <button type="submit" class="btn btn-primary">Add</button>
    }

    <p>@Html.ActionLink("Back to Treats", "Index", "Treats", null, new { @class = "btn btn-secondary" })</p>

    @Html.ActionLink("Home", "Index", "Home", null, new { @class = "btn btn-primary" })
</div>