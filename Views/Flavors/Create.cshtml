@model SweetStore.Models.Flavor

<div class="content">
    <h4>Create New Flavor</h4>

    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-red", @style = "font-weight: 600;" })

    @using (Html.BeginForm())
    {
        @Html.LabelFor(model => model.Name)
        <br />
        @Html.TextBoxFor(model => model.Name, new { placeholder = "Name" })
        <br />
        <input type="submit" value="Add Flavor" class="btn btn-green" />
    }
    
    @Html.ActionLink("Show All Flavors", "Index", "Flavors", null, new { @class = "btn btn-blue" })
</div>